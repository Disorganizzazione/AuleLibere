<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.harisont.aulelibere.Floor0">

    <ImageView
        android:id="@+id/mask0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zerom"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/floor0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zero"
        />
    <ImageView
        android:id="@+id/ag0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zeroag"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/ar0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zeroar"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/gg0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zerogg"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/gr0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zerogr"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/vg0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zerovg"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/vr0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/zerovr"
        android:visibility="invisible"
        />

</RelativeLayout>