<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.harisont.aulelibere.Floor3">

    <ImageView
        android:id="@+id/mask3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/trem"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/floor3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/tre"
        />
    <ImageView
        android:id="@+id/ag3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/treag"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/ar3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/trear"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/bg3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/trebg"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/br3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/trebr"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/cg3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/trecg"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/cr3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/trecr"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Piano 3" />

</RelativeLayout>
